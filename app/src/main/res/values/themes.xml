<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/LIGHT_GREY</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorControlHighlight">@color/LIGHT_GREY</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="NoActionBarTheme"
        parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/PrimaryColor</item>
        <item name="android:elevation">0dp</item>

        <!-- Support library compatibility -->
        <item name="background">@color/PrimaryColor</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">

    </style>

    <style name="MyButtonStyle" parent="android:Widget.Holo.Button">

    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/PrimaryColor"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="match_parent"
            android:id="@+id/btnBack"
            android:src="@drawable/icn_back"
            android:background="@drawable/transparent_click" />

        <com.ecomnationmobile.library.Control.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/request_3d_model"
            android:textColor="@color/WHITE"
            android:gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollAddress"
            android:layout_weight="1"
            android:background="@color/GHOST_WHITE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ecomnationmobile.library.Control.MyTextView
                    android:padding="15dp"
                    android:id="@+id/price"
                    android:textSize="@dimen/abc_text_size_menu_material"
                    android:textColor="@color/SecondaryColor"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/LIGHT_GREY"
                android:padding="5dp"
                android:layout_height="match_parent">
                <com.ecomnationmobile.library.Control.MyTextView
                    android:padding="5dp"
                    android:id="@+id/txt1"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:textColor="@color/PrimaryColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.ecomnationmobile.library.Control.MyTextView
                    android:padding="5dp"
                    android:id="@+id/txt2"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:textColor="@color/PrimaryColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.ecomnationmobile.library.Control.MyTextView
                    android:padding="5dp"
                    android:id="@+id/txt3"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:textColor="@color/PrimaryColorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                </LinearLayout>
                <com.ecomnationmobile.library.Control.MyTextView
                    android:padding="10dp"
                    android:id="@+id/txt4"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:textColor="@color/PrimaryColorText"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/image"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <com.ecomnationmobile.library.Control.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expected_delivery"
                        android:textColor="@color/PrimaryColorText"
                        android:textSize="@dimen/abc_text_size_caption_material" />

                    <com.ecomnationmobile.library.Control.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDeliverDate"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_caption_material"
                        android:textColor="@color/PrimaryColorText"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:id="@+id/btnSubmit"
            android:background="@drawable/button_click"
            android:text="@string/add_cart"
            android:gravity="center"
            android:textColor="@color/WHITE"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_menu_material" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/PrimaryColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_click"
            android:src="@drawable/icn_back" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="@dimen/abc_action_button_min_height_material"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_click"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/addFavourite"
            android:layout_width="@dimen/abc_action_button_min_height_material"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_click"
            android:src="@drawable/white_heart" />

        <ImageButton
            android:id="@+id/cart"
            android:layout_width="@dimen/abc_action_bar_default_height_material"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_click"
            android:src="@drawable/cart_drawable" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/LIGHT_BACK"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/WHITE"
                        android:gravity="center_horizontal"
                        android:divider="@drawable/vertical_divider"
                        android:showDividers="end"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.ecomnationmobile.library.Control.ImageControl
                                android:id="@+id/imageControl"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/image_height"/>

                            <ImageView
                                android:id="@+id/imgSale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusableInTouchMode="false"
                                android:src="@drawable/sale_label"
                                android:visibility="invisible" />

                        </FrameLayout>

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:foregroundGravity="center"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:id="@+id/imagePreview"
                                android:orientation="horizontal" />

                        </HorizontalScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp">

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:id="@+id/txtProductName"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/PrimaryColorText"
                                android:textSize="@dimen/abc_text_size_title_material" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:id="@+id/txtPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:textColor="@color/BLACK"
                                    android:textSize="@dimen/text_size_15"
                                    android:textStyle="bold" />

                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:id="@+id/txtOldPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:textColor="@color/SecondaryColorText"
                                    android:textSize="@dimen/abc_text_size_caption_material"
                                    android:visibility="gone" />

                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:id="@+id/txtDiscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center"
                                    android:textColor="@color/PercentageColor"
                                    android:textSize="@dimen/text_size_10"
                                    android:visibility="gone" />

                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:id="@+id/txtStock"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/SecondaryColor"
                                    android:textSize="@dimen/text_size_10"
                                    android:visibility="gone" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:id="@+id/txtPriceBreakUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="@string/view_breakup"
                                android:background="@drawable/simple_click"
                                android:clickable="true"
                                android:textColor="@color/SecondaryColor"
                                android:textSize="@dimen/text_size_11" />

                            <LinearLayout
                                android:id="@+id/prices"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/border_white"
                                        android:padding="10dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/gold"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/gold"
                                                android:textStyle="bold"
                                                android:textColor="@color/SecondaryColorText"
                                                android:textSize="@dimen/text_size_11" />

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/goldPrice"
                                                android:textColor="@color/PrimaryColorText"
                                                android:textSize="@dimen/abc_text_size_caption_material" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/border_white"
                                        android:padding="10dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/gemstone" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/gemstone"
                                                android:textStyle="bold"
                                                android:textColor="@color/SecondaryColorText"
                                                android:textSize="@dimen/text_size_11" />

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/gemPrice"
                                                android:textColor="@color/PrimaryColorText"
                                                android:textSize="@dimen/abc_text_size_caption_material" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/border_white"
                                        android:padding="10dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/diamond"/>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/diamond"
                                                android:textStyle="bold"
                                                android:textColor="@color/SecondaryColorText"
                                                android:textSize="@dimen/text_size_11" />

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/diamondPrice"
                                                android:textColor="@color/PrimaryColorText"
                                                android:textSize="@dimen/abc_text_size_caption_material" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/border_white"
                                        android:padding="10dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="10dp"
                                            android:src="@drawable/making" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/making_charge"
                                                android:textStyle="bold"
                                                android:textColor="@color/SecondaryColorText"
                                                android:textSize="@dimen/text_size_10" />

                                            <com.ecomnationmobile.library.Control.MyTextView
                                                android:layout_width="fill_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/makingPrice"
                                                android:textColor="@color/PrimaryColorText"
                                                android:textSize="@dimen/abc_text_size_caption_material" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="20dp"
                                    android:layout_weight="1">

                                    <View
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:id="@+id/metalColor"
                                        android:layout_marginRight="5dp"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <com.ecomnationmobile.library.Control.MyTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/metal_grade"
                                            android:textStyle="bold"
                                            android:textColor="@color/SecondaryColorText"
                                            android:textSize="@dimen/abc_text_size_caption_material" />

                                        <com.ecomnationmobile.library.Control.MyTextView
                                            android:id="@+id/metalValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/PrimaryColorText"
                                            android:textSize="@dimen/text_size_13"/>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_weight="1">

                                    <View
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/dia"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <com.ecomnationmobile.library.Control.MyTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/diamond_quality"
                                            android:textStyle="bold"
                                            android:textColor="@color/SecondaryColorText"
                                            android:textSize="@dimen/abc_text_size_caption_material" />

                                        <com.ecomnationmobile.library.Control.MyTextView
                                            android:id="@+id/qualityValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/PrimaryColorText"
                                            android:textSize="@dimen/text_size_13" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sizeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="15dp"
                            android:orientation="horizontal">

                            <Spinner
                                android:layout_width="100dp"
                                android:layout_height="45dp"
                                android:id="@+id/sizeSpinner"
                                android:background="@drawable/border_translucent"/>

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/sizeGuide"
                                android:text="@string/size_guide"
                                android:clickable="true"
                                android:background="@drawable/simple_click"
                                android:textSize="@dimen/abc_text_size_caption_material"
                                android:padding="5dp"
                                android:textColor="@color/SecondaryColor" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_height="wrap_content">

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expected_delivery"
                                android:textColor="@color/PrimaryColorText"
                                android:textSize="@dimen/abc_text_size_caption_material" />

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtDeliverDate"
                                android:textStyle="bold"
                                android:textSize="@dimen/abc_text_size_caption_material"
                                android:textColor="@color/PrimaryColorText"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/vertical_divider"
                            android:showDividers="beginning|middle|end">

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:id="@+id/txtCustomize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/simple_click"
                                android:clickable="true"
                                android:text="@string/customize_design"
                                android:padding="15dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_13"
                                android:textColor="@color/SecondaryColor"
                                android:drawableRight="@drawable/sidearrow"/>

                            <com.ecomnationmobile.library.Control.MyTextView
                                android:id="@+id/txtSolitaire"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/simple_click"
                                android:clickable="true"
                                android:text="@string/request_3d_model"
                                android:padding="15dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_13"
                                android:textColor="@color/SecondaryColor"
                                android:drawableRight="@drawable/sidearrow"/>

                        </LinearLayout>

                        <com.ecomnationmobile.library.Control.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/why_buy"
                            android:textSize="@dimen/abc_text_size_menu_material"
                            android:textColor="@color/SecondaryColorText"
                            android:paddingTop="15dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="40dp"
                            android:paddingLeft="40dp"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:padding="5dp"
                                        android:id="@+id/certified"/>
                                    <com.ecomnationmobile.library.Control.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="@string/virani_certified"
                                        android:textColor="@color/SecondaryColorText"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            <Space
                                android:layout_width="30dp"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:id="@+id/model"/>
                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:text="@string/virani_model"
                                    android:textColor="@color/SecondaryColorText"
                                    android:textSize="@dimen/text_size_11" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="40dp"
                            android:paddingLeft="40dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:padding="5dp"
                                        android:id="@+id/exchange"/>
                                    <com.ecomnationmobile.library.Control.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="@string/virani_exchange"
                                        android:textColor="@color/SecondaryColorText"
                                        android:textSize="@dimen/text_size_11" />
                                </LinearLayout>

                            <Space
                                android:layout_width="30dp"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:id="@+id/guarantee"/>
                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:text="@string/virani_guarantee"
                                    android:textColor="@color/SecondaryColorText"
                                    android:textSize="@dimen/text_size_11" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="40dp"
                            android:paddingLeft="40dp"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:id="@+id/shipping"/>
                                <com.ecomnationmobile.library.Control.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:text="@string/virani_shipping"
                                    android:textColor="@color/SecondaryColorText"
                                    android:textSize="@dimen/text_size_11" />
                            </LinearLayout>

                            <Space
                                android:layout_width="30dp"
                                android:layout_height="match_parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:padding="5dp"
                                        android:id="@+id/conflict"/>
                                    <com.ecomnationmobile.library.Control.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:textStyle="bold"
                                        android:text="@string/virani_conflict"
                                        android:textColor="@color/SecondaryColorText"
                                        android:textSize="@dimen/text_size_11"/>
                                </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <com.ecomnationmobile.library.Control.PinCodeChecker
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:id="@+id/pincodeBlock"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:animateLayoutChanges="true"
                        android:showDividers="beginning|middle|end"
                        android:divider="@drawable/vertical_divider"
                        android:orientation="vertical">

                        <com.ecomnationmobile.library.Control.SlidingTabLayout
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/WHITE" />

                        <com.ecomnationmobile.library.Control.WrapContentHeightViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <com.ecomnationmobile.library.Control.ReviewControl
                        android:id="@+id/reviewControl"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.ecomnationmobile.library.Control.ProductListControl
                        android:id="@+id/productListControl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_button_min_height_material"
                android:background="@drawable/button_click"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />
        </LinearLayout>

        <include
            layout="@layout/empty_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/errorLayout" />

        <include
            layout="@layout/progress_bar"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>